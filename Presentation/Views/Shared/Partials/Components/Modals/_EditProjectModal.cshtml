@model UpdateProjectViewModel

<section id="editProjectModal-@Model.Id" class="modal">
    <div class="card">
        <div class="card-header">
            <h3>Edit Project</h3>
            <button class="btn-close" data-type="close" data-target="#editProjectModal-@Model.Id"></button>
        </div>
        <div class="card-body">

            <form id="editProjectModal-@Model.Id" asp-controller="Projects" asp-action="Update" method="post" enctype="multipart/form-data" novalidate>
                <div class="form-group">
                    <div class="image-preview-container project-image" data-file-upload>
                        <img class="hide" />
                        <div class="circle circle-gray">
                            <i class="fa-duotone fa-solid fa-camera"></i>
                        </div>
                        <input asp-for="Image" accept="image/*" hidden />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectName" class="form-label"></label>
                    <input asp-for="ProjectName" class="form-input" />
                    <span asp-validation-for="ProjectName"></span>
                </div>
               <div class="form-group">
                    <label asp-for="ClientId" class="form-label">Client Name</label>
                    <div class="form-select" data-placeholder="Choose a client">
                        <button type="button" class="form-select-trigger">
                            <span class="form-select-text"></span>
                        </button>
                        <ul class="form-select-options">
                            @foreach (var option in Model.Clients)
                            {
                                    <li class="form-select-option" data-value="@option.Value">@option.Text</li>
                            }
                        </ul>
                        <input type="hidden" asp-for="ClientId" />
                    </div>
                </div> 

                <div class="form-group">
                    <label asp-for="Description" class="form-label"></label>
                    <div class="wysiwyg">
                        <textarea id="edit-project-description-@Model.Id" data-quill-textarea="#edit-project-description-wysiwyg-editor-@Model.Id"></textarea>
                        <div id="edit-project-description-wysiwyg-editor-@Model.Id" data-quill-editor data-quill-toolbar="#edit-project-description-wysiwyg-toolbar-@Model.Id" class="wysiwyg-editor"></div>
                        <div id="edit-project-description-wysiwyg-toolbar-@Model.Id" class="wysiwyg-toolbar">
                            <span class="ql-formats">
                                <button class="ql-bold"></button>
                                <button class="ql-italic"></button>
                                <button class="ql-underline"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-align" value=""></button>
                                <button class="ql-align" value="center"></button>
                                <button class="ql-align" value="right"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-list" value="bullet"></button>
                                <button class="ql-list" value="ordered"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-link"></button>
                            </span>
                        </div>
                    </div>
                </div> 

                <div class="form-horizontal-group">
                    <div class="form-group">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" class="form-input" type="date" />
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" class="form-input" type="date" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="UserId" class="form-label"></label>
                    <div class="form-select" data-placeholder="Choose a member">
                        <button type="button" class="form-select-trigger">
                            <span class="form-select-text"></span>
                        </button>
                        <ul class="form-select-options">
                            @foreach (var option in Model.Users)
                            {
                                    <li class="form-select-option" data-value="@option.Value">@option.Text</li>
                            }
                        </ul>
                        <input type="hidden" asp-for="UserId" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Budget" class="form-label">Budget</label>
                    <div class="form-input-extended">
                        <i class="fa-duotone fa-solid fa-dollar-sign"></i>
                        <input asp-for="Budget" class="form-input" type="text" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="StatusId" class="form-label"></label>
                    <div class="form-select" data-placeholder="Select a status">
                        <button type="button" class="form-select-trigger">
                            <span class="form-select-text"></span>
                        </button>
                        <ul class="form-select-options">
                            @foreach (var option in Model.Statuses)
                            {
                                <li class="form-select-option" data-value="@option.Value">@option.Text</li>
                            }
                        </ul>
                        <input type="hidden" asp-for="StatusId" />
                    </div>
                </div>


                <button type="submit" class="btn">Create</button>
            </form>

        </div>
    </div>
</section>
