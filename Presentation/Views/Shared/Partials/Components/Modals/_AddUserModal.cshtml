@model AddUserViewModel

<section id="addUserModal" class="modal">
    <div class="card">
        <div class="card-header">
            <h3>Add Member</h3>
            <button class="btn-close" data-type="close" data-target="#addUserModal"></button>
        </div>
        <div class="card-body">

            <form form-type="add" id="addUserModal" asp-controller="Users" asp-action="Add" method="post" enctype="multipart/form-data" novalidate>
                <div class="form-group">
                    <div class="image-preview-container profile-image" data-file-upload>
                        <img class="hide" />
                        <div class="circle circle-gray">
                            <i class="fa-duotone fa-solid fa-camera"></i>
                        </div>
                        <input asp-for="Image" accept="image/*" hidden />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-input" />
                    <span asp-validation-for="FirstName"></span>
                </div>


                <div class="form-group">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-input" />
                    <span asp-validation-for="LastName"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-input" />
                    <span asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-input" />
                    <span asp-validation-for="PhoneNumber"></span>
                </div>


                <div class="form-group">
                    <label asp-for="JobTitle" class="form-label"></label>
                    <input asp-for="JobTitle" class="form-input" />
                    <span asp-validation-for="JobTitle"></span>
                </div>



                <div class="form-group">
                    <label asp-for="DateOfBirth" class="form-label"></label>
                    <input asp-for="DateOfBirth" class="form-input" type="date" />
                </div>

                <button type="submit" class="btn">Create</button>
            </form>

        </div>
    </div>
</section>
