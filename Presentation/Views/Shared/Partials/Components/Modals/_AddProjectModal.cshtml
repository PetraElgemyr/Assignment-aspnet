@model AddProjectViewModel

<section id="addProjectModal" class="modal">
    <div class="card">
        <div class="card-header">
            <h3>Add Project</h3>
            <button class="btn-close" data-type="close" data-target="#addProjectModal"></button>
        </div>
        <div class="card-body">

            <form form-type="add" id="addProjectForm" asp-controller="Projects" asp-action="Add" method="post" enctype="multipart/form-data" novalidate>
                <div class="form-group">
                    <div class="image-preview-container project-image" data-file-upload>
                        <img class="hide" />
                        <div class="circle circle-gray">
                            <i class="fa-duotone fa-solid fa-camera"></i>
                        </div>
                        <input asp-for="Image" accept="image/*" hidden />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectName" class="form-label"></label>
                    @* <div class="form-select"> TODO fråga hans vrf detta förstör selects funktionalitet (d rättar till felmeddelanden) *@
                        <input asp-for="ProjectName" class="form-input" />
                        <span asp-validation-for="ProjectName"></span>
                    @* </div> *@
                  
                </div>

                <div class="form-group">
                    <label asp-for="ClientId" class="form-label"></label>
                    <select asp-for="ClientId" asp-items="Model.Clients" class="form-select">
                        <option value="@Model.ClientId">Select a client</option>
                    </select>
                    <span asp-validation-for="ClientId"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label"></label>
                    <div class="wysiwyg">


                        <textarea asp-for="Description" id="add-project-description" data-quill-textarea="#add-project-description-wysiwyg-editor"></textarea>
                        <div id="add-project-description-wysiwyg-editor" data-quill-editor data-quill-toolbar="#add-project-description-wysiwyg-toolbar" class="wysiwyg-editor"></div>
                        <div id="add-project-description-wysiwyg-toolbar" class="wysiwyg-toolbar">
                            <span class="ql-formats">
                                <button class="ql-bold"></button>
                                <button class="ql-italic"></button>
                                <button class="ql-underline"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-align" value=""></button>
                                <button class="ql-align" value="center"></button>
                                <button class="ql-align" value="right"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-list" value="bullet"></button>
                                <button class="ql-list" value="ordered"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-link"></button>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-horizontal-group">
                    <div class="form-group">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" class="form-input" type="date" />
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" class="form-input" type="date" />
                    </div>
                </div>


                <div class="form-group">
                    <label asp-for="UserId" class="form-label"></label>
                    <select asp-for="UserId" asp-items="Model.Users" class="form-select">
                        <option value="@Model.UserId">Select a user</option>
                    </select>
                    <span asp-validation-for="UserId"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Budget" class="form-label">Budget</label>
                    <div class="form-input-extended">
                        <i class="fa-duotone fa-solid fa-dollar-sign" style="--fa-primary-color: #1c2045; --fa-secondary-color: #1c2045;"></i>
                        <input asp-for="Budget" class="form-input" type="text" />
                    </div>
                </div>

                <button type="submit" class="btn">Create</button>
            </form>

        </div>
    </div>
</section>
