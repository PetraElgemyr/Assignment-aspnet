@model AddProjectViewModel

<div id="addProjectModal" class="modal">
    <div class="modal-content">
        <header class="modal-header">
            <h3>Add Project</h3>
            <button data-type="close" data-target="#addProjectModal" type="button" class="btn-close"></button>
        </header>
        <div class="modal-body">
            <form id="projectForm" novalidate method="post" data-name="project" asp-action="Add" asp-controller="Projects" enctype="multipart/form-data">


                <div class="form-group">
                    <label asp-for="ProjectName"></label>
                    <div class="field-group">
                        <input asp-for="ProjectName" />
                        <span asp-validation-for="ProjectName"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <div class="wysiwyg-container">
                        <textarea asp-for="Description" class="hide"></textarea>
                        <div id="add-project-description-editor" class="wysiwyg-editor"></div>
                        <div id="add-project-description-toolbar" class="wysiwyg-toolbar">
                            <span class="ql-formats">
                                <button class="ql-bold"></button>
                                <button class="ql-italic"></button>
                                <button class="ql-underline"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-align" value=""></button>
                                <button class="ql-align" value="center"></button>
                                <button class="ql-align" value="right"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-list" value="bullet"></button>
                                <button class="ql-list" value="ordered"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-link"></button>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-group date-group">
                    <div class="form-group-date">
                        <label asp-for="StartDate"></label>
                        <div class="field-group">
                            <input asp-for="StartDate" type="date" />
                            <span asp-validation-for="StartDate"></span>
                        </div>
                    </div>

                    <div class="form-group-date">
                        <label asp-for="EndDate"></label>
                        <div class="field-group">
                            <input asp-for="EndDate" type="date" />
                            <span asp-validation-for="EndDate"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Budget"></label>
                    <div class="field-group">
                        <input asp-for="Budget" type="number"/>
                        <span asp-validation-for="Budget"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ClientId"></label>
                    <div class="field-group">
                        @* <select asp-for="ClientId" asp-items="" ></select> *@
                        <span asp-validation-for="Budget"></span>
                    </div>
                </div>

            
                 
                <button type="submit" class="btn btn-blue btn-submit">Create</button>

            </form>
        </div>

    </div>
</div>


<script>
    initWysiwygEditor('#add-project-description-editor', '#add-project-description-toolbar','#Description', '@Html.Raw(Model?.Description ?? "")')
</script>