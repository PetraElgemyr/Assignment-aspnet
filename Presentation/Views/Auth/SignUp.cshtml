@model SignUpViewModel
@{
    ViewData["Title"] = "Become a Member";
}

<section id="signup" class="card">
    @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
    {
        <div class="alert-notification error">
            @ViewBag?.ErrorMessage
        </div>
    }

    <div class="card-header">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="card-body">
        <form class="external-form">
            <img src="~/images/google-icon.svg"/> 
            <button class="btn-external">
            <span>
                    Sign up with Google
            </span>    
            </button>
        </form>

        <div class="or-divider">
            <span>or</span>
        </div>

        <form asp-controller="Auth" asp-action="SignUp" method="post" enctype="multipart/form-data" novalidate>
            <input type="hidden" name="returnUrl" value="@ViewBag?.ReturnUrl" />

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <div class="field-group">
                    <input asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="LastName"></label>
                <div class="field-group">
                    <input asp-for="LastName" />
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="field-group">
                    <input asp-for="Password" value="@Model?.Password" />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <div class="field-group">
                    <input asp-for="ConfirmPassword" value="@Model?.ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-submit">Create Account</button>
            </div>

        </form>
    </div>

    <div class="card-footer">
        <span>Already have an account?</span>
        <a asp-controller="Auth" asp-action="Login">Log In</a>
    </div>

</section>