@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section id="login" class="card">
    @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
    {
        <div class="alert-notification error">
            @ViewBag?.ErrorMessage
        </div>
    }

    <div class="card-header">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="card-body">
        <form method="post" asp-controller="ExternalAuth" asp-action="Index" novalidate>
            <button type="submit" class="btn-external">
                <img src="/images/icons/google-icon.svg" />
                <span>Log in with Google</span>
            </button>
        </form>

        <div class="divider"><span>or</span></div>

        <form asp-controller="Auth" asp-action="Login" method="post" enctype="multipart/form-data" novalidate>
            <input type="hidden" name="returnUrl" value="@ViewBag?.ReturnUrl" />

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" value="@Model?.Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" value="@Model?.Password" />
            </div>

            <div class="form-checkbox-group">
                <label class="form-checkbox">
                    <input asp-for="RememberMe" class="form-checkbox-input" />
                    <span class="form-checkbox-box"></span>
                </label>
                <label asp-for="RememberMe" class="form-label">Remember me</label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-submit">Log In</button>
            </div>



        </form>
    </div>

    <div class="card-footer">
        <span>Don't have an account?</span>
        <a asp-controller="Auth" asp-action="SignUp">Sign Up</a>
    </div>

</section>